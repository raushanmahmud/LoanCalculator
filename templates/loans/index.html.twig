{% extends 'base.html.twig' %}

{% block title %} LoanCalculator {% endblock %}

{% block body %}
    {% if loans %}
        <table id="loans" class="table table-striped">
            <thead>
                <tr>
                    <th>ID Кредита</th>
                    <th>Название Кредита</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                {% for loan in loans %}
                    <tr>
                        <td><a href="/loan/{{loan.id}}">{{loan.id}}</a></td>
                        <td>{{loan.title}}</td>
                        <td> 
                            <a href="/loan/{{loan.id}}" class="btn btn-dark">Показать график</a> 
                            <a href="#" class="btn btn-danger delete-loan" data-id="{{  loan.id }}">Удалить</a>                         
                        
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Нет кредитов для отображения.</p>
        <a class="btn btn-primary" href="/loan/new">Добавить кредит</a>
    {% endif %}
{% endblock %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}